<div class="recruiters-job-card">
  <div class="recruiters-job-card-content">
    <h4><%= job.Title %></h4>
    <%# <h4><%= job.company  %>
    <h4><%= job.Location %></h4>
    <h4><%= job.category %></h4>

    <p><%= job.Description %></p>
  </div>
  <div class="recruiters-job-card-buttons">
      <%= button_to 'View Application', job_application_path(job.job_id), method: :get, class: 'rec-job-card-button blue' %>
      <%= button_to 'Delete', delete_job_path(job_id: job.job_id), method: :delete, data: { confirm: 'Are you sure you want to delete this job?' }, class: 'rec-job-card-button red' %>
      <%# <p>Delete <FontAwesomeIcon icon=faTrashCan /></p>
    </button> %>
    <p class="applicants">
       <%= "#{applications_count} Applications received" %>
    </p>
  </div>
</div>
